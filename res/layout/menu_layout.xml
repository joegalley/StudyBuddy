<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/studying_around_me_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="See who&apos;s studying around me" />

        <EditText
            android:id="@+id/enter_class_id_edittext"
            android:layout_width="195dip"
            android:layout_height="wrap_content"
            android:hint="Enter class ID"
            android:imeOptions="actionDone"
            android:maxLength="16"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:singleLine="true" />
    </LinearLayout>

    <Button
        android:id="@+id/see_open_tables_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="See open tables" />

    <Button
        android:id="@+id/change_subject_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="Change the subject you are studying" />

    <Button
        android:id="@+id/leave_table_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="Leave table" />

</LinearLayout>